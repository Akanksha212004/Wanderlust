    <style>
      #filters{
        display: flex;
        flex-wrap: wrap;
        overflow-x: auto;            /* allow horizontal scroll */
        padding-bottom: 1rem;
        align-items: center;
      }

      .filter{
        text-align: center;
        margin-right: 2rem;
        margin-top: 2rem;
        opacity: 0.7;
        flex: 0 0 auto;               /* keep each filterâ€™s width */
      }

      .filter.active {
        opacity: 1;
        font-weight: bold;
        border-bottom: 2px solid #000;
      }

      #filters .filter a {
      text-decoration: none;   /* removes underline */
      color: inherit;          /* keeps the color same as parent */
    }


      .filter:hover{
        opacity: 1;
        cursor: pointer;
      }

      .filter p{
        font-size: 0.8rem;
      }

      /* Only hide filters on extra small screens if toggle is needed */
      @media (max-width: 768px) {
      #filters {
        display: none; /* hide on small screens */
        flex-direction: column;
      }

      #filters.show {
        display: flex;
      }
    }

      .tax-info{
        display: none;
      }

      .tax-toggle{
        border: 1px solid black;
        border-radius: 1rem;
        height: 3.25rem;
        padding: 1rem;
        margin-left: 2rem;
        display: flex;
        align-items: center;
      }

    </style>

    <!-- Hamburger button for small screens -->
  <button id="filter-toggle" class="d-md-none btn btn-outline-secondary mb-2">
    Filters
  </button>


    <div id="filters" class="filters-collapsed d-lg-flex">
      <div class="filter <%= category === "Trending" ? 'active' : '' %>">
        <a href="/listings?category=Trending">
          <div><i class="fa-solid fa-fire"></i></div>
          <p>Trending</p>
        </a>
      </div>

      <div class="filter <%= category === "Rooms" ? 'active' : '' %>">
        <a href="/listings?category=Rooms">
          <div><i class="fa-solid fa-bed"></i></div>
          <p>Rooms</p>
        </a>
      </div>

      <div class="filter <%= category === "Iconic cities" ? 'active' : '' %>">
        <a href="/listings?category=Iconic cities">
          <div><i class="fa-solid fa-mountain-city"></i></div>
          <p>Iconic cities</p>
        </a>
      </div>

      <div class="filter <%= category === "Mountains" ? 'active' : '' %>">
        <a href="/listings?category=Mountains">
          <div><i class="fa-solid fa-bed"></i></div>
          <p>Mountains</p>
        </a>
      </div>

      <div class="filter <%= category === "Castles" ? 'active' : '' %>">
        <a href="/listings?category=Castles">
          <div><i class="fa-solid fa-chess-rook"></i></div>
          <p>Castles</p>
        </a>
      </div>

      <div class="filter <%= category === "Amazing Pools" ? 'active' : '' %>">
        <a href="/listings?category=Amazing Pools">
          <div><i class="fa-solid fa-person-swimming"></i></div>
          <p>Amazing Pools</p>
        </a>
      </div>

      <div class="filter <%= category === "Camping" ? 'active' : '' %>">
        <a href="/listings?category=Camping">
          <div><i class="fa-solid fa-campground"></i></div>
          <p>Camping</p>
        </a>
      </div>

      <div class="filter <%= category === "Farms" ? 'active' : '' %>">
        <a href="/listings?category=Farms">
          <div><i class="fa-solid fa-cow"></i></div>
          <p>Farms</p>
        </a>
      </div>

      <div class="filter <%= category === "Arctic" ? 'active' : '' %>">
        <a href="/listings?category=Arctic">
          <div><i class="fa-solid fa-snowflake"></i></div>
          <p>Arctic</p>
        </a>
      </div>

      <div class="filter <%= category === "Domes" ? 'active' : '' %>">
        <a href="/listings?category=Domes">
          <div><i class="fa-solid fa-igloo"></i></div>
          <p>Domes</p>
        </a>
      </div>

      <div class="filter <%= category === "Boats" ? 'active' : '' %>">
        <a href="/listings?category=Boats">
          <div><i class="fa-solid fa-sailboat"></i></div>
          <p>Boats</p>
        </a>
      </div>

      <div class="filter <%= !category ? 'active' : '' %>">
        <a href="/listings">
        <div><i class="fa-solid fa-th"></i></div>
          <p>All</p>
        </a>
      </div>


      <div class="tax-toggle">
        <div class="form-check-reverse form-switch">
          <input class="form-check-input" type="checkbox" role="switch" id="switchCheckDefault">
          <label class="form-check-label" for="switchCheckDefault">Display total after taxes</label>
        </div>
      </div>

    </div>

  <div class="container-fluid mt-3">
    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3">

    <% if (allListings.length === 0) { %>
      <div class="col-12 text-center my-5">
        <h4>No results found for "<%= search %>" ðŸ˜•</h4>
        <a href="/listings" class="btn btn-outline-primary mt-3">Return to Home Page</a>
      </div>
    <% } else { %>
  
      <% for(let listing of allListings) { %>
      <div class="col mb-4">
        <a href="/listings/<%= listing._id %>" class="listing-link">
          <div class="card listing-card">
            <img src="<%= listing.image.url %>" class="card-img-top" alt="listing_image" style="height: 20rem;">
            <div class="card-body">
              <p class="card-text">
                <b><%= listing.title %></b><br>
                &#8377;<%= listing.price.toLocaleString("en-IN") %>/night
                <i class="tax-info">&nbsp; &nbsp; +18% GST</i>
              </p>
            </div>
          </div>
        </a>
      </div>
      <% } %>
    <% } %>
    </div>
  </div>
  

  </body>


  <script>
    let taxSwitch = document.getElementById("switchCheckDefault");
    taxSwitch.addEventListener("click", () => {
      let taxInfo = document.getElementsByClassName("tax-info");
      for(info of taxInfo) {
        if(info.style.display != "inline"){
          info.style.display = "inline";
        } else{
          info.style.display = "none";
        }
      }
    });

    const toggleBtn = document.getElementById("filter-toggle");
    const filters = document.getElementById("filters");
    toggleBtn.addEventListener("click", () => {
    filters.classList.toggle("show");
  });

  </script>


